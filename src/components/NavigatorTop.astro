---
import {usePath} from "@/hooks/usePath";
const {language, equivalentHref} = Astro.props;

const showEquivalentHref = !!equivalentHref;
const languageOf = {
    en: {
        books: 'Books',
        notes: 'Notes',
        lang: 'Language',
    },
    es: {
        books: 'Libros',
        notes: 'Notas',
        lang: 'Idioma',
    }
} as const;

const urlOf = {
    en: {
        home: usePath("/"),
        books: usePath("/en/books"),
        notes: usePath("/biblenotes"),
    },
    es: {
        home: usePath("/es"),
        books: usePath("/es/books"),
        notes: usePath("/NotasBiblicas"),
    }
} as const;
---
<header class="mx:auto px:2rem px:0@md max-w:xs@sm max-w:sm@md max-w:md@lg max-w:lg@xl flex flex:col flex:row@sm justify-content:space-between align-items:center p:2rem mb:6rem@lg">
    <a href={urlOf[language]['home']} class="text-decoration:none color:currentColor">
        <h1 class="font-size:2rem font-weight:400">Bibleserralta.com</h1>
    </a>

    <nav class="flex flex:row gap:1rem">
        <a href={urlOf[language]['books']}
           class="color:currentColor text-decoration-color:rgb(241,114,51) text-decoration:underline">
            {languageOf[language]['books']}
        </a>
        <a href={urlOf[language]['notes']}
           class="color:currentColor text-decoration-color:rgb(241,114,51) text-decoration:underline">
            {languageOf[language]['notes']}
        </a>
        <a href={usePath(equivalentHref)}
           class={`${showEquivalentHref ? 'flex' : 'hidden'} color:currentColor text-decoration-color:rgb(241,114,51) text-decoration:underline`}>
            {languageOf[language]['lang']}
        </a>
    </nav>
</header>