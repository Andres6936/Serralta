        *,
        *::before,
        *::after {
            box-sizing: border-box;
        }

        html {
            -webkit-text-size-adjust: none;
            -moz-text-size-adjust: none;
            text-size-adjust: none;
        }

        body,
        h1,
        h2,
        h3,
        h4,
        p,
        figure,
        blockquote,
        dl,
        dd {
            margin: 0;
        }

        body {
            min-height: 100vh;
            line-height: 1.5;
        }

        h1,
        h2,
        h3,
        h4,
        button,
        input,
        label {
            line-height: 1.25;
        }

        h1,
        h2,
        h3,
        h4 {
            text-wrap: balance;
        }

        a:not([class]) {
            -webkit-text-decoration-skip: ink;
            text-decoration-skip-ink: auto;
            color: currentColor;
        }

        img,
        picture {
            max-width: 100%;
            display: block;
        }

        input,
        button,
        textarea,
        select {
            font: inherit;
        }

        textarea:not([rows]) {
            min-height: 10em;
        }

        :target {
            scroll-margin-block: 5ex;
        }

        :is(ul, ol)[class] {
            list-style-type: "";
            padding: 0;
        }

        body {
            font-family: rooney-web, serif;
            font-size: clamp(1.1875rem, 1.1349rem + 0.2632vi, 1.3125rem);
            line-height: 1.6;
        }
