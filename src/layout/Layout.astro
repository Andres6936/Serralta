<body class="min-h:100vh background-color:hsl(39|93%|99%/1) color:#352621">

<NavigatorTop {...{equivalentHref, language}}/>
<main class="mx:auto px:2rem max-w:lg@xl max-w:md@2xl">
    <slot/>
</main>
<ThanksRead {language} show={showThanksRead}/>
<NavigatorBottom {...{language, equivalentHref}}/>

</body>
</html>